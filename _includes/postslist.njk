<ol reversed class="postlist" style="counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }}">
{% for post in postslist | reverse %}
    {% if not post.data.unlisted %}
        <li onclick="location.href = '{{ post.url }}';" class="cursor-pointer postlist-item{% if post.url == url %} bg-blue-100{% endif %}">
            <span class="project-emoji">{% if post.data.emoji %}{{ post.data.emoji }} {% endif %}</span><a href="{{ post.url }}" class="postlist-title">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>
            <div class="metadata">
                {% if "projects" in post.data.tags %}
                <time class="metadata-date" datetime="{{Â post.date }}">{{ post.data.year }} PROJECT</time>
                {% else %}
                <time class="metadata-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate("yyyy-MM-dd ccc") | upper }}</time>
                {% endif %}
                {# <ul class="metadata-tags">
                    {%- for tag in post.data.tags | filterTagList | sort %}
